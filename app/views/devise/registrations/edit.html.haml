= render "header"

.registrations-main
  .registrations-container
    .registrations__title
      %h2 登録情報変更
    .registrations-container__inputbox
      = form_with model:@user, url: user_registration_path, id: 'new-user', class: 'new-user', local: true do |f|
        = render "devise/shared/error_messages", resource: resource
        .registrations-container__inputbox__form
          = f.label :nickname, class: 'registrations-container__inputbox__form__label'
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "image", class: 'registrations-container__inputbox__form__field'
        .registrations-container__inputbox__form
          = f.label :email, class: 'registrations-container__inputbox__form__label'
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'registrations-container__inputbox__form__field'
        .registrations-container__inputbox__form
          = f.label :avatar
          %br/
          %label.btn.btn-primary.btn-lg
            アバター画像選択
            = f.file_field :avatar, id: "review-image", class: "file", style: "display: none;"
        .registrations-container__inputbox__form
          = f.label :password, class: 'registrations-container__inputbox__form__label'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: 'registrations-container__inputbox__form__field'
        .registrations-container__inputbox__form
          = f.label :password_confirmation, "password（確認用）", class: 'registrations-container__inputbox__form__label'
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'registrations-container__inputbox__form__field'
        .registrations-container__inputbox__submit
          = f.submit "登録", class: 'btn btn-danger btn-lg'

=render "footer"
