        = image_tag 'top_img_okinawa.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "沖縄 お取り寄せ"
          = f.submit '沖縄のお取り寄せで検索', class: "app-main__content__area__box__submit"

    .app-main__content__title
      %h1 食材から探す
    .app-main__content__area
      .app-main__content__area__box
        = image_tag 'top_img_meet.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "肉 お取り寄せ"
          = f.submit '肉のお取り寄せで検索', class: "app-main__content__area__box__submit"
      .app-main__content__area__box
        = image_tag 'top_img_susi.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "寿司 お取り寄せ"
          = f.submit '寿司のお取り寄せで検索', class: "app-main__content__area__box__submit"
      .app-main__content__area__box
        = image_tag 'top_img_kaisen.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "海鮮 お取り寄せ"
          = f.submit '海鮮のお取り寄せで検索', class: "app-main__content__area__box__submit"
      .app-main__content__area__box
        = image_tag 'top_img_cake.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "スイーツ お取り寄せ"
          = f.submit 'スイーツのお取り寄せで検索', class: "app-main__content__area__box__submit"


    .app-main__content__title
      %h1 注目から探す
    .app-main__content__review
      .app-main__content__review__box
        - @items.each do |item|
          
          %table
            %td
              = link_to (image_tag item.imageurl), item.itemurl, target: :_blank
            %td.td-item-name
              %p 商品名
              = item.name
              %br
              %br
              = link_to "商品詳細ページ", item_path(item.id)
            %td.td-item-price
              = "¥#{item.price}円"

      = paginate(@items)











