          = f.hidden_field :keyword, value: "東京 お取り寄せ"
          = f.submit '東京のお取り寄せで検索', class: "app-main__content__area__box__submit"
      .app-main__content__area__box
        = image_tag 'top_img_osaka.jpg', width: '100px', height: '100px'
        = form_with url: items_search_path, method: :get, local: true do |f|
          = f.hidden_field :keyword, value: "大阪 お取り寄せ"
          = f.submit '大阪のお取り寄せで検索', class: "app-main__content__area__box__submit"
      .app-main__content__area__box
        = image_tag 'top_img_hokkaido.jpg', width: '100px', height: '100px'
